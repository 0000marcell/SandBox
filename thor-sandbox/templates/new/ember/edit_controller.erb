import Ember from 'ember';

export default Ember.Controller.extend({
	actions: {
		edit<%= @model.camelize %>(model){
		this.store.findRecord('<%= @model %>', model.id).then(<%= @model %> => {
				<%= @args.set(@model) %>
				<%= @model %>.save().then((resp) => {
				this.transitionToRoute('<%= @model.pluralize %>.index');
				}, (err) => {
					console.log(err);
				});
			});	
		}
	}
});" > app/
