import Ember from 'ember';

export default Ember.Controller.extend({
	actions: {
		delete<%= @model.camelize %>(id){
		this.store.findRecord('<%= @model %>', id).then(<%= @model %> => {
				<%= @model %>.destroyRecord().then((resp) => {
					console.log(resp);
				}).catch((err) => {
					console.log(err);
				});
			}).catch((err) => {
				console.log(err);
			});
		}	
	}
});
