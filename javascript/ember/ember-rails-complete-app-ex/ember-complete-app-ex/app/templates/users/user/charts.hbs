<div class='container'>

	{{!-- TIME SERIES --}}
	<div class='row'>
		<div class='col s12 m3 chart-controls time-series'>
			<div class='chart-control'>
				{{#md-btn-dropdown class='blue darken-1' text=period belowOrigin=true}}
					<li><a {{action "getTimeSeriesData" "2015"}}>2015</a></li>
					<li><a {{action "getTimeSeriesData" "2014"}}>2014</a></li>
					<li><a {{action "getTimeSeriesData" "2013"}}>2013</a></li>
					<li><a {{action "getTimeSeriesData" "2012"}}>2012</a></li>
				{{/md-btn-dropdown}}
			</div>
			<div class='chart-control'>
				{{md-range value=barPadding min=0 max=1 step=0.1 name="Bar Padding"}}
			</div>
			<div class='chart-control'>
				{{md-check name="y axis from zero" checked=yAxisFromZero}}
			</div>
			<div class='chart-control'>
				{{#md-radios
					selection=selectedInterval
					optionValuePath='id'
					optionLabelPath='text'}}
					<p>{{md-radio value='M' name="Months"}}</p>
					<p>{{md-radio value='Q' name="Quarters"}}</p>
					<p>{{md-radio value='Y' name="Years"}}</p>
				{{/md-radios}}
			</div>
		</div>
		<div class='col s12 m9'>
			{{time-series-chart
				barPadding=barPadding
				selectedInterval=selectedInterval
				selectedSeedColor="#1e88e5"
				yAxisFromZero=yAxisFromZero
				barData=timeSeriesBarContent
				lineData=timeSeriesLineContent
			}}
		</div>
	</div>
	<div class='row'>
		<div class='col s12 m3 chart-controls pie-chart'>
			<div class='chart-control'>
				{{#md-btn-dropdown class='orange darken-1' text=period belowOrigin=true}}
					<li><a {{action "getData" "2016"}}>2016</a></li>
					<li><a {{action "getData" "2015"}}>2015</a></li>
					<li><a {{action "getData" "2014"}}>2014</a></li>
					<li><a {{action "getData" "2013"}}>2013</a></li>
					<li><a {{action "getData" "2012"}}>2012</a></li>
				{{/md-btn-dropdown}}
			</div>
			<div class='chart-control'>
				{{md-range value=pieRadius min=0 max=200 step=1 name="Pie Radius"}}
			</div>
			<div class='chart-control'>
				{{#md-radios
					selection=pieSlices
					optionValuePath='id'
					optionLabelPath='text'}}
					<p>{{md-radio value=1 name="One"}}</p>
					<p>{{md-radio value=2 name="Two"}}</p>
					<p>{{md-radio value=3 name="Three"}}</p>
					<p>{{md-radio value=4 name="Four"}}</p>
					<p>{{md-radio value=5 name="Five"}}</p>
				{{/md-radios}}
			</div>
		</div>
		<div class='col s12 m9'>
			{{pie-chart maxRadius=pieRadius 
				maxNumberOfSlices=pieSlices
			  data=data selectedSeedColor="#fb8c00"}}
		</div>
	</div>
	<div class='row'>
		<div class='col s12 m3 chart-controls horizontal-bar'>
			<div class='chart-control'>
				{{#md-btn-dropdown 
				 class='blue-grey darken-1' text=period belowOrigin=true}}
					<li><a {{action "getData" "2016"}}>2016</a></li>
					<li><a {{action "getData" "2015"}}>2015</a></li>
					<li><a {{action "getData" "2014"}}>2014</a></li>
					<li><a {{action "getData" "2013"}}>2013</a></li>
					<li><a {{action "getData" "2012"}}>2012</a></li>
				{{/md-btn-dropdown}}
			</div>
			<div class='chart-control'>
				{{md-range value=maxBarThickness min=20 max=60 name="Max bar thickness"}}
			</div>
		</div>
		<div class='col s12 m9'>
			{{horizontal-bar-chart 
			  maxBarThickness=maxBarThickness
				data=data selectedSeedColor="#546e7a"}}
		</div>
	</div>
	<div class='row'>
		<div class='col s12 m3 chart-controls vertical-bar'>
			<div class='chart-control'>
				{{#md-btn-dropdown 
					class='red accent-3' 
					text=period belowOrigin=true}}
					<li><a {{action "getData" "2016"}}>2016</a></li>
					<li><a {{action "getData" "2015"}}>2015</a></li>
					<li><a {{action "getData" "2014"}}>2014</a></li>
					<li><a {{action "getData" "2013"}}>2013</a></li>
					<li><a {{action "getData" "2012"}}>2012</a></li>
				{{/md-btn-dropdown}}
			</div>
			<div class='chart-control'>
				{{md-check name="stack bars" checked=stackBars}}
			</div>
			<div class='chart-control'>
				<p>Stack Bars</p>
				{{md-switch checked=stackBars}}
			</div>
		</div>
		<div class='col s12 m9'>
			{{vertical-bar-chart 
				stackBars=stackBars
				maxBarThickness=maxBarThickness 
				data=data selectedSeedColor="#ff1744"}}
		</div>
	</div>
	<div class='row'>
		<div class='col s12 m3 chart-controls scatter-plot'>
			<div class='chart-control'>
				{{#md-btn-dropdown 
					class='deep-purple darken-4' 
					text=period belowOrigin=true}}
					<li><a {{action "getScatterData" "2016"}}>2016</a></li>
					<li><a {{action "getScatterData" "2015"}}>2015</a></li>
					<li><a {{action "getScatterData" "2014"}}>2014</a></li>
					<li><a {{action "getScatterData" "2013"}}>2013</a></li>
					<li><a {{action "getScatterData" "2012"}}>2012</a></li>
				{{/md-btn-dropdown}}
			</div>
			<div class='chart-control'>
				{{md-range value=dotRadius min=0 max=100 step=1 name="Dot Radius"}}
			</div>
		</div>
		<div class='col s12 m9'>
			{{scatter-chart
				dotRadius=dotRadius
				selectedSeedColor="#311b92"
				data=scatterData
				xValueDisplayName="Risk"
				yValueDisplayName="Return"
			}}
		</div>
	</div>	
	<div class='row'>
		<div class='col s12 m3 chart-controls'>
			<div class='chart-control'>
				{{#md-btn-dropdown class='orange darken-1' text=period belowOrigin=true}}
					<li><a {{action "getData" "2016"}}>2016</a></li>
					<li><a {{action "getData" "2015"}}>2015</a></li>
					<li><a {{action "getData" "2014"}}>2014</a></li>
					<li><a {{action "getData" "2013"}}>2013</a></li>
					<li><a {{action "getData" "2012"}}>2012</a></li>
				{{/md-btn-dropdown}}
			</div>
		</div>
		<div class='col s12 m9'>
			{{bubble-chart data=data
				selectedSeedColor="#fb8c00"}}
		</div>
	</div>
</div>
